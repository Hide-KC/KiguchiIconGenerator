<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />
    
    <style name="HueBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#808080</item>
        <item name="android:progressTint">#00ffffff</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>

</resources>
